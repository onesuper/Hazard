

import cmd



from parser import parse


class Shell(cmd.Cmd):
    intro = """
Welcome!!!"""
    prompt = "repl> "
    ruler = "="

    def emptyline(self):
        pass

    def default(self, readin):
        sentence = readin

        # read a complete sentence
        while not self._is_complete(sentence):
            sentence += raw_input()

            print parse(sentence)


        sentence = 0


        

        
         
    def _is_complete(self, sentence):
        return len(sentence.split('(')) <= len(sentence.split(')'))
    
    

if __name__ == "__main__":
    sh = Shell()
    sh.cmdloop()
    



