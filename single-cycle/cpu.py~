
import control as c
import instruction as i





class CPU(object):

    # R-type instructions including add, sub, and, slt
    R = c.Control(True, False, False, True, False, False, False, True, False)
    lw = c.Control(False, True, True,, True, True, False, False, False, False)
    sw = c.Control(NULL, True, NULL, False, False, True, False, False, False)
    beq = c.Control(NULL, False, NULL, False, False, False, True, False, True)

    def __init__(self, memory, pc = 99):
        self.memory = memory
        self.pc = self.memory.text_start
        self.cycle = 0
        self.registers = [0] * 32



    def step(self):
        inst = self.memory.getWord(self.pc)
        self.cycle += 1
        
